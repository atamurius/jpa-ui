{{#partial 'menu-bottom'}}

    {{> ws.cpcs.adsiuba.jpaui.ui.admin.UIController.menu-item
        url='javascript:void(save())'
        title=(concat 'Save ' currentEntity.name)
        icon='floppy-disk'}}

{{/partial}}

{{#partial 'menu'}}
    {{> ws.cpcs.adsiuba.jpaui.ui.admin.UIController.menu }}
{{/partial}}

{{#partial 'body'}}

    <form method="post" action="{{base}}/{{currentEntity.id}}/{{id}}"
          class="form-horizontal"
          id="main-form"
          onsubmit="return submitForm(this)">
        <div class="form-group global-error" style="display:none">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="alert alert-danger"></div>
            </div>
        </div>
        {{#each currentEntity.properties}}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="field_{{name}}"
                       title="{{displayName}}">{{displayName}}</label>
                    <div class="col-sm-10">
                        {{#unless (eq true readOnly)}}
                            {{{editProperty name object=item}}}
                            <span class="help-block error" style="display:none"></span>
                        {{^}}
                            <p class="form-control-static">{{{showProperty name object=item}}}</p>
                        {{/unless}}
                    </div>
                </div>
        {{/each}}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="btn-group btn-group-sm" role="group">
                    <button class="btn btn-primary" type="submit">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                        Save {{currentEntity.name}}
                    </button>
                    <a href="{{base}}/{{currentEntity.id}}" class="btn btn-default">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>

{{/partial}}

