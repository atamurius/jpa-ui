<div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="glyphicon glyphicon-menu-hamburger"></span>
        </button>
        <a class="navbar-brand" href="{{base}}/" title="Admin Panel">
            <span class="glyphicon glyphicon-home hidden-md hidden-lg hidden-xs" aria-hidden="true"></span>
            <span class="hidden-sm">Admin Panel</span>
        </a>
    </div>
    <div class="collapse navbar-collapse clearfix" id="navbar-collapse">
        <ul class="nav nav-pills nav-stacked">
            <li class="nav-divider"></li>

            {{#each entities}}
                {{> ws.cpcs.adsiuba.jpaui.ui.admin.UIController.menu-item
                    active=(eq currentEntity.id id)
                    url=(concat base '/' id)
                    title=pluralName
                    icon=iconId}}
            {{/each}}

            {{#unless single}}
                <li class="nav-divider"></li>
                {{#block 'menu-bottom'}}{{/block}}
            {{/unless}}
        </ul>
    </div>
</div>
